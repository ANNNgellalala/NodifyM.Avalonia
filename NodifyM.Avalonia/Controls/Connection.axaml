<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Nodify.Avalonia.Controls">
    <Design.PreviewWith>
        <controls:Connection />
    </Design.PreviewWith>

    <Style Selector="controls|Connection">
        <!-- Set Defaults -->
        <Setter Property="StrokeThickness"
                Value="3" />
        <Setter Property="Stroke"
                Value="DodgerBlue" />
        <Setter Property="Fill"
                Value="DodgerBlue" />
        <Setter Property="Spacing"
                Value="20" />
    </Style>
    <Style Selector="controls|LineConnection">
        <!-- Set Defaults -->
        <Setter Property="StrokeThickness"
                Value="3" />
        <Setter Property="Stroke"
                Value="DodgerBlue" />
        <Setter Property="Fill"
                Value="DodgerBlue" />
        <Setter Property="Spacing"
                Value="30" />
    </Style>

</Styles>